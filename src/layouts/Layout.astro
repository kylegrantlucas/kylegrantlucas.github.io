---
export interface Props {
    title?: string;
}

const { title = "Kyle Lucas-Rodriguez" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="kylelucas.io" />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <nav>
                <a href="/">Home</a>
                <a href="/work/">Work</a>
                <a href="/projects/">Projects</a>
                <a
                    href="https://github.com/kylegrantlucas/resume/releases/latest/download/kyle_modern.pdf"
                    >Resume</a
                >
            </nav>
        </header>
        <main>
            <slot />
        </main>
        <footer>
            <hr />
            <p>
                Built with <a href="https://astro.build">Astro</a> â€¢ <a
                    href="https://github.com/kylegrantlucas/kylelucas.io"
                    >Source</a
                >
            </p>
        </footer>
    </body>
</html>

<style>
    body {
        margin: 40px auto;
        max-width: 650px;
        line-height: 1.6;
        font-size: 17px;
        color: #333;
        padding: 0 20px;
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
            Ubuntu, Cantarell, sans-serif;
        background-color: #fafafa;
    }

    h1 {
        line-height: 1.2;
        color: #222;
        margin-top: 0;
        margin-bottom: 0.5em;
        font-size: 17px;
        font-weight: 600;
    }

    h2 {
        line-height: 1.3;
        color: #333;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
        border-bottom: 1px solid #eee;
        padding-bottom: 0.3em;
    }

    h3 {
        line-height: 1.3;
        color: #444;
        margin-top: 1.2em;
        margin-bottom: 0.4em;
    }

    h4 {
        line-height: 1.2;
        font-weight: normal;
        color: #666;
        margin-top: 0.8em;
        margin-bottom: 0.3em;
    }

    a {
        color: #0066cc;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border-bottom-color 0.2s ease;
    }

    a:hover {
        border-bottom-color: #0066cc;
    }

    a:visited {
        color: #5856d6;
    }

    ul {
        line-height: 1.5;
        padding-left: 1.5em;
    }

    li {
        margin-bottom: 0.3em;
    }

    p {
        margin-bottom: 1em;
    }

    nav {
        margin-bottom: 2em;
        padding-bottom: 1em;
        border-bottom: 2px solid #ddd;
    }

    nav a {
        margin-right: 1.5em;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.9em;
        letter-spacing: 0.5px;
        padding: 0.3em 0.6em;
        border-radius: 3px;
        transition: all 0.2s ease;
    }

    nav a:hover {
        background-color: #f0f0f0;
        transform: translateY(-1px);
    }

    nav a:last-child {
        margin-right: 0;
    }

    footer {
        margin-top: 3em;
        padding-top: 1em;
        font-size: 0.9em;
        color: #666;
    }

    footer hr {
        border: none;
        border-top: 1px solid #ddd;
        margin-bottom: 1em;
    }

    footer p {
        margin: 0;
        text-align: center;
    }

    footer a {
        color: #666;
    }

    footer a:hover {
        color: #333;
    }

    @media (max-width: 600px) {
        body {
            padding: 0 15px;
        }

        nav a {
            display: block;
            margin-bottom: 0.5em;
            margin-right: 0;
            padding: 0.5em 0.8em;
        }
    }
</style>
