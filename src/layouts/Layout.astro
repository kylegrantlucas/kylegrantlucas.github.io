---
import { ClientRouter } from "astro:transitions";

export interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Kyle Lucas-Rodriguez",
    description = "Software Engineer at Fastly, specializing in distributed systems and backend infrastructure."
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://kylelucas.io");
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="theme-color" content="#0d0d0d" />
        <link rel="canonical" href={canonicalURL} />
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:site_name" content="Kyle Lucas-Rodriguez" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />

        <title>{title}</title>
        <ClientRouter />
    </head>
    <body>
        <header>
            <nav>
                <a href="/">Home</a>
                <a href="/work/">Work</a>
                <a href="/projects/">Projects</a>
                <a
                    href="https://github.com/kylegrantlucas/resume/releases/latest/download/kyle_modern.pdf"
                    >Resume</a
                >
            </nav>
        </header>
        <main>
            <slot />
        </main>
    </body>
</html>

<style is:global>
    :root {
        --bg: #0d0d0d;
        --bg-elevated: #1a1a1a;
        --bg-hover: #222;
        --text: #e8e8e8;
        --text-muted: #999;
        --text-faint: #666;
        --heading: #fff;
        --link: #fff;
        --link-hover: #ccc;
        --link-visited: #888;
        --border: #333;
        --border-hover: #444;
        --selection-bg: #444;
        --selection-text: #fff;
        color-scheme: dark;
    }

    @media (prefers-color-scheme: light) {
        :root {
            --bg: #fafafa;
            --bg-elevated: #fff;
            --bg-hover: #f0f0f0;
            --text: #333;
            --text-muted: #666;
            --text-faint: #999;
            --heading: #111;
            --link: #111;
            --link-hover: #555;
            --link-visited: #666;
            --border: #ddd;
            --border-hover: #bbb;
            --selection-bg: #b3d4fc;
            --selection-text: #000;
            color-scheme: light;
        }
    }

    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    body {
        margin: 40px auto;
        max-width: 650px;
        line-height: 1.7;
        font-size: 17px;
        color: var(--text);
        padding: 0 20px;
        font-family: Georgia, "Times New Roman", Times, serif;
        background-color: var(--bg);
    }

    h1 {
        line-height: 1.2;
        color: var(--heading);
        margin-top: 0;
        margin-bottom: 0.5em;
        font-size: 1.4em;
        font-weight: normal;
    }

    h2 {
        line-height: 1.3;
        color: var(--text);
        margin-top: 1.5em;
        margin-bottom: 0.5em;
        border-bottom: 1px solid var(--border);
        padding-bottom: 0.3em;
        font-weight: normal;
        font-size: 1.2em;
    }

    h3 {
        line-height: 1.3;
        color: var(--text-muted);
        margin-top: 1.2em;
        margin-bottom: 0.4em;
        font-weight: normal;
    }

    h4 {
        line-height: 1.2;
        font-weight: normal;
        color: var(--text-muted);
        margin-top: 0.8em;
        margin-bottom: 0.3em;
    }

    a {
        color: var(--link);
        text-decoration: underline;
        transition: color 0.15s ease;
    }

    a:hover {
        color: var(--link-hover);
    }

    a:visited {
        color: var(--link-visited);
    }

    ul {
        line-height: 1.6;
        padding-left: 1.5em;
    }

    li {
        margin-bottom: 0.3em;
    }

    p {
        margin-bottom: 1em;
    }

    strong {
        color: var(--heading);
        font-weight: 600;
    }

    hr {
        border: none;
        border-top: 1px solid var(--border);
    }

    ::selection {
        background: var(--selection-bg);
        color: var(--selection-text);
    }
</style>

<style>
    nav {
        margin-bottom: 2em;
        padding-bottom: 1em;
        border-bottom: 1px solid var(--border);
    }

    nav a {
        margin-right: 1.5em;
        font-size: 1em;
        padding: 0.2em 0;
    }

    nav a:last-child {
        margin-right: 0;
    }

    @media (max-width: 600px) {
        body {
            padding: 0 15px;
        }

        nav a {
            display: block;
            margin-bottom: 0.5em;
            margin-right: 0;
            padding: 0.5em 0;
        }
    }
</style>
