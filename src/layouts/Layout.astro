---
import { ClientRouter } from "astro:transitions";

export interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Kyle Lucas-Rodriguez",
    description = "Software Engineer at Fastly, specializing in distributed systems and backend infrastructure."
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://kylelucas.io");
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="theme-color" content="#0d0d0d" />
        <link rel="canonical" href={canonicalURL} />
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:site_name" content="Kyle Lucas-Rodriguez" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />

        <title>{title}</title>
        <ClientRouter />

        <!-- Performance: Preconnect to API for faster TTFB -->
        <link rel="preconnect" href="https://kyle-currently-into.global.ssl.fastly.net" crossorigin />
        <link rel="dns-prefetch" href="https://kyle-currently-into.global.ssl.fastly.net" />
    </head>
    <body>
        <header>
            <nav>
                <a href="/">Home</a>
                <a href="/work/">Work</a>
                <a href="/projects/">Projects</a>
                <a
                    href="https://github.com/kylegrantlucas/resume/releases/latest/download/kyle_modern.pdf"
                    >Resume</a
                >
            </nav>
        </header>
        <main>
            <slot />
        </main>
        <footer id="currently-into">
            <div id="stacked-music" class="loading-skeleton"></div>
            <div><a href="https://letterboxd.com/kylegrantlucas" target="_blank" id="stacked-film"></a></div>
            <ul id="stacked-film-list"></ul>
            <div><a href="https://hardcover.app/@kylegrantlucas" target="_blank" id="stacked-book"></a></div>
            <ul id="stacked-book-list"></ul>
            <div><a href="https://hardcover.app/@kylegrantlucas" target="_blank" id="stacked-recently-read"></a></div>
            <ul id="stacked-recently-read-list"></ul>
        </footer>
        <script>
            // Use VCL service for WAF/DDoS protection layer
            const CURRENTLY_INTO_API = "https://kyle-currently-into.global.ssl.fastly.net";
            const CACHE_KEY = "currently-into-cache";
            const CACHE_TTL = 60 * 1000; // 1 minute in ms
            const STALE_TTL = 5 * 60 * 1000; // 5 minutes stale-while-revalidate

            async function fetchCurrentlyInto() {
                // Try to show cached data immediately (stale-while-revalidate pattern)
                const cached = getCachedData();
                if (cached) {
                    updateDisplay(cached.data);
                    // If stale, fetch fresh in background
                    if (Date.now() - cached.timestamp > CACHE_TTL) {
                        fetchFreshData().catch(() => {}); // Silent background refresh
                    }
                    return;
                }

                // No cache, fetch fresh
                await fetchFreshData();
            }

            function getCachedData() {
                try {
                    const raw = localStorage.getItem(CACHE_KEY);
                    if (!raw) return null;
                    const cached = JSON.parse(raw);
                    // Return if within stale window
                    if (Date.now() - cached.timestamp < STALE_TTL) {
                        return cached;
                    }
                    return null;
                } catch {
                    return null;
                }
            }

            async function fetchFreshData() {
                try {
                    const response = await fetch(CURRENTLY_INTO_API);
                    if (!response.ok) throw new Error("API error");
                    const data = await response.json();
                    // Cache the response
                    localStorage.setItem(CACHE_KEY, JSON.stringify({
                        data,
                        timestamp: Date.now()
                    }));
                    updateDisplay(data);
                } catch (error) {
                    console.error("Failed to fetch currently-into data:", error);
                    // Only show error if no cached data was displayed
                    const cached = getCachedData();
                    if (!cached) {
                        document.getElementById("stacked-music")?.classList.remove("loading-skeleton");
                    }
                }
            }

            function updateDisplay(data) {
                // Build text parts
                let musicText = "";
                let filmText = "";
                let bookText = "";

                if (data.music) {
                    const prefix = data.music.nowPlaying ? "ðŸ’¿ Spinning:" : "â™« Last played:";
                    musicText = { prefix, artist: data.music.artist, track: data.music.track, url: data.music.url };
                }

                if (data.films && data.films.length > 0) {
                    const filmTexts = data.films.map((film) => {
                        const year = film.year ? ` (${film.year})` : "";
                        const rating = film.rating ? ` ${film.rating}` : "";
                        return `${film.title}${year}${rating}`;
                    });
                    filmText = `ðŸŽ¬ Watched: ${filmTexts.join(" Â· ")}`;
                }

                if (data.books && data.books.length > 0) {
                    const bookTitles = data.books.map((book) => book.title);
                    bookText = `ðŸ“– Reading: ${bookTitles.join(" Â· ")}`;
                }

                // Music
                const stackedMusic = document.getElementById("stacked-music");
                stackedMusic?.classList.remove("loading-skeleton");
                if (musicText) {
                    stackedMusic.innerHTML = `<a href="https://www.last.fm/user/kylelucas93" target="_blank">${musicText.prefix}</a> <a href="${musicText.url}" target="_blank">${musicText.artist} - ${musicText.track}</a>`;
                } else {
                    stackedMusic.textContent = "";
                }

                // Films as list (linked to TMDB)
                document.getElementById("stacked-film").textContent = data.films?.length ? "ðŸŽ¬ Watched:" : "";
                const filmList = document.getElementById("stacked-film-list");
                filmList.innerHTML = "";
                if (data.films?.length) {
                    data.films.forEach((film) => {
                        const li = document.createElement("li");
                        const year = film.year ? ` (${film.year})` : "";
                        const rating = film.rating ? ` ${film.rating}` : "";
                        const link = document.createElement("a");
                        link.href = film.movieUrl;
                        link.target = "_blank";
                        link.textContent = `${film.title}${year}`;
                        li.appendChild(link);
                        if (rating) li.appendChild(document.createTextNode(rating));
                        filmList.appendChild(li);
                    });
                }

                // Books as list (linked to Amazon)
                document.getElementById("stacked-book").textContent = data.books?.length ? "ðŸ“– Reading:" : "";
                const bookList = document.getElementById("stacked-book-list");
                bookList.innerHTML = "";
                if (data.books?.length) {
                    data.books.forEach((book) => {
                        const li = document.createElement("li");
                        const author = book.author ? ` by ${book.author}` : "";
                        const percent = book.percent ? ` (${book.percent}%)` : "";
                        const link = document.createElement("a");
                        link.href = book.amazonUrl;
                        link.target = "_blank";
                        link.textContent = book.title;
                        li.appendChild(link);
                        li.appendChild(document.createTextNode(`${author}${percent}`));
                        bookList.appendChild(li);
                    });
                }

                // Recently read books (title -> Amazon, stars -> Hardcover)
                document.getElementById("stacked-recently-read").textContent = data.recentlyRead?.length ? "ðŸ“š Recently Read:" : "";
                const recentlyReadList = document.getElementById("stacked-recently-read-list");
                recentlyReadList.innerHTML = "";
                if (data.recentlyRead?.length) {
                    data.recentlyRead.forEach((book) => {
                        const li = document.createElement("li");
                        const author = book.author ? ` by ${book.author}` : "";

                        // Title links to Amazon
                        const titleLink = document.createElement("a");
                        titleLink.href = book.amazonUrl;
                        titleLink.target = "_blank";
                        titleLink.textContent = book.title;
                        li.appendChild(titleLink);

                        li.appendChild(document.createTextNode(author));

                        // Stars link to Hardcover
                        if (book.rating) {
                            li.appendChild(document.createTextNode(" "));
                            const ratingLink = document.createElement("a");
                            ratingLink.href = book.hardcoverUrl;
                            ratingLink.target = "_blank";
                            ratingLink.textContent = book.rating;
                            li.appendChild(ratingLink);
                        }

                        recentlyReadList.appendChild(li);
                    });
                }
            }

            // Fetch on page load
            fetchCurrentlyInto();
        </script>
    </body>
</html>

<style is:global>
    :root {
        --bg: #0d0d0d;
        --bg-elevated: #1a1a1a;
        --bg-hover: #222;
        --text: #e8e8e8;
        --text-muted: #999;
        --text-faint: #666;
        --heading: #fff;
        --link: #888;
        --link-hover: #aaa;
        --link-visited: #666;
        --border: #333;
        --border-hover: #444;
        --selection-bg: #444;
        --selection-text: #fff;
        color-scheme: dark;
    }

    @media (prefers-color-scheme: light) {
        :root {
            --bg: #fafafa;
            --bg-elevated: #fff;
            --bg-hover: #f0f0f0;
            --text: #333;
            --text-muted: #666;
            --text-faint: #999;
            --heading: #111;
            --link: #0000ff;
            --link-hover: #0000cc;
            --link-visited: #551a8b;
            --border: #ddd;
            --border-hover: #bbb;
            --selection-bg: #b3d4fc;
            --selection-text: #000;
            color-scheme: light;
        }
    }

    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    body {
        margin: 40px auto;
        max-width: 650px;
        line-height: 1.7;
        font-size: 17px;
        color: var(--text);
        padding: 0 20px;
        font-family: Georgia, "Times New Roman", Times, serif;
        background-color: var(--bg);
    }

    h1 {
        line-height: 1.2;
        color: var(--heading);
        margin-top: 0;
        margin-bottom: 0.5em;
        font-size: 1.4em;
        font-weight: normal;
    }

    h2 {
        line-height: 1.3;
        color: var(--text);
        margin-top: 1.5em;
        margin-bottom: 0.5em;
        border-bottom: 1px solid var(--border);
        padding-bottom: 0.3em;
        font-weight: normal;
        font-size: 1.2em;
    }

    h3 {
        line-height: 1.3;
        color: var(--text-muted);
        margin-top: 1.2em;
        margin-bottom: 0.4em;
        font-weight: normal;
    }

    h4 {
        line-height: 1.2;
        font-weight: normal;
        color: var(--text-muted);
        margin-top: 0.8em;
        margin-bottom: 0.3em;
    }

    a {
        color: var(--link);
        text-decoration: underline;
        transition: color 0.15s ease;
    }

    a:hover {
        color: var(--link-hover);
    }

    a:visited {
        color: var(--link-visited);
    }

    ul {
        line-height: 1.6;
        padding-left: 1.5em;
    }

    li {
        margin-bottom: 0.3em;
    }

    p {
        margin-bottom: 1em;
    }

    strong {
        color: var(--heading);
        font-weight: 600;
    }

    hr {
        border: none;
        border-top: 1px solid var(--border);
    }

    ::selection {
        background: var(--selection-bg);
        color: var(--selection-text);
    }
</style>

<style>
    nav {
        margin-bottom: 2em;
        padding-bottom: 1em;
        border-bottom: 1px solid var(--border);
    }

    nav a {
        margin-right: 1.5em;
        font-size: 1em;
        padding: 0.2em 0;
    }

    nav a:last-child {
        margin-right: 0;
    }

    @media (max-width: 600px) {
        body {
            padding: 0 15px;
        }

        nav a {
            display: block;
            margin-bottom: 0.5em;
            margin-right: 0;
            padding: 0.5em 0;
        }
    }

    /* Currently Into Footer */
    #currently-into {
        margin-top: 3em;
        padding-top: 1em;
        border-top: 1px solid var(--border);
        font-family: "Courier New", Courier, monospace;
        font-size: 0.85em;
        color: var(--text-muted);
    }

    #currently-into > div {
        margin: 0.5em 0 0.2em 0;
    }

    #currently-into ul {
        margin: 0.2em 0 0.5em 1.5em;
        padding: 0;
        list-style-type: "Â» ";
    }

    #currently-into li {
        margin: 0.15em 0;
        padding-left: 0.3em;
    }

    #currently-into a {
        color: var(--text);
        text-decoration: underline;
        text-decoration-color: var(--text-faint);
        text-underline-offset: 2px;
    }

    #currently-into a:hover {
        color: var(--heading);
        text-decoration-color: var(--text-muted);
    }

    #currently-into a:visited {
        color: var(--text);
    }

    /* Loading skeleton for perceived performance */
    .loading-skeleton {
        height: 1.2em;
        width: 60%;
        background: linear-gradient(
            90deg,
            var(--bg-elevated) 25%,
            var(--border) 50%,
            var(--bg-elevated) 75%
        );
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 4px;
    }

    @keyframes shimmer {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>
