const getIconPath = (type: string, name: string): string => {
  if (type === 'brand') {
    return brandIcons[name] || '';
  } else if (type === 'regular') {
    return regularIcons[name] || '';
  }
  return '';
};

const iconPath = getIconPath(type, name);
---

<svg class={`icon ${className}`} xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
  <path d={iconPath}></path>
</svg>

<style>
  .icon {
    width: 1em;
    height: 1em;
    display: inline-block;
    vertical-align: middle;
  }
</style>
