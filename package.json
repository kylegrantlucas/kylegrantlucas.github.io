{
  "name": "kylelucas.io",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kylegrantlucas/kylelucas.io",
  "author": "Kyle Lucas <kyle@kylelucas.io>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist src/_js",
    "build": "npm-run-all clean build:ts build:11ty",
    "dev": "NODE_ENV=dev npm-run-all clean build:ts -p watch:* -- --watch",
    "build:11ty": "eleventy --quiet",
    "watch:11ty": "eleventy --serve --quiet",
    "build:ts": "tsc --outDir src/_js",
    "watch:ts": "npm run build:ts --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@types/node": "^16.10.1",
    "jest": "^27.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  }
}
